<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="10dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#2a3a48"
    android:layout_gravity="center"
    tools:context=".Settings">


        <TextView
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/choose_your_map"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

                <ImageView
                    android:layout_margin="10dp"
                    android:id="@+id/darkmap"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="200dp"
                    android:background="@drawable/darkmap"
                    android:contentDescription="@string/app_name" />



                <ImageView
                    android:id="@+id/navyblue"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/navybluemap"
                    android:contentDescription="@string/app_name" />

        </LinearLayout>


        <ImageView
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id="@+id/normal"
            android:layout_width="160dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:background="@drawable/normalmap"
            android:contentDescription="@string/app_name"
            android:padding="10dp" />

</LinearLayout>